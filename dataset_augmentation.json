{
	"image_url": "latticesemi/ubuntu:latest",
	"command" : "python3 /scripts/dataset_augmentation.py --input /lattice/dataset/#datasetname/ --output /lattice/dataset/#datasetname/augment/",
	"output_dimension" : {
		"name": "Output Dimension",
		"default": "224,224",
		"type": "str"
	},
	"brightness" : {
		"name": "Brightness",
		"type": "checkbox",
		"default": true,
		"help": "Images with increased brightness will be added in dataset",
		"help_image": "https://raw.githubusercontent.com/Shubham294/json/master/0b623718afd21f23_con_2.jpg",
		"options" : {
			"brightness_percentage" : {
				"name" : "% images of total dataset",
				"type": "slider",
				"default": "100",
				"min": 0,
				"max": 100,
				"step": 10

			}
		}
	},
	"contrast" : {
		"name": "contrast",
		"type": "checkbox",
		"default": true,
		"help": "Images with increased contrast will be added in dataset",
		"help_image" : "https://raw.githubusercontent.com/Shubham294/json/master/0a4db5693da70448_con_2.jpg",
		"options" : {
			"contrast_percentage" : {
				"name" : "% images of total dataset",
				"type": "slider",
				"default": "100",
				"min": 0,
				"max": 100,
				"step": 10	
						
			}
		}
	},
	"canvas_shift" : {
		"name": "Canvas Shift",
		"type": "checkbox",
		"default": true,
		"help": "Image will shift by X number of pixel (default by 10px). Image with shifted canvas will be added in dataset",
		"options" : {
			"canvas_shift_percentage" : {
				"name" : "% images of total dataset",
				"type": "slider",
				"default": "100",
				"min": 0,
				"max": 100,
				"step": 10			
			},
			"pixel_shift" : {
				"name" : "Pixel shift value",
				"type": "int",
				"default": "10"		
			}
		}
	}
}
