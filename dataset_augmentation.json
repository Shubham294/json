{
	"image_url": "latticesemi/ubuntu:latest",
	"command" : "python3 /scripts/dataset_augmentation.py --input /lattice/dataset/#datasetname/ --output /lattice/dataset/#datasetname/augment/",
	"output_dimension" : {
		"name": "Output Dimension",
		"default": "224,224",
		"type": "str"
	},
	"brightness" : {
		"name": "Brightness",
		"type": "checkbox",
		"default": true,
		"options" : {
			"brightness_percentage" : {
				"name" : "Augmentation Percentage",
				"type": "slider",
				"default": "100",
				"min": 0,
				"max": 100,
				"step": 10

			}
		}
	},
	"contrast" : {
		"name": "contrast",
		"type": "checkbox",
		"default": true,
		"options" : {
			"contrast_percentage" : {
				"name" : "Augmentation Percentage",
				"type": "slider",
				"default": "100",
				"min": 0,
				"max": 100,
				"step": 10	
						
			}
		}
	},
	"canvas_shift" : {
		"name": "Canvas Shift",
		"type": "checkbox",
		"default": true,
		"options" : {
			"canvas_shift_percentage" : {
				"name" : "Augmentation Percentage",
				"type": "slider",
				"default": "100",
				"min": 0,
				"max": 100,
				"step": 10			
			},
			"pixel_shift" : {
				"name" : "Pixel shift value",
				"type": "int",
				"default": "10"		
			}
		}
	}
